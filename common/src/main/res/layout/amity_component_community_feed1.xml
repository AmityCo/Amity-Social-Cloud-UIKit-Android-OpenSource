<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.amity.socialcloud.uikit.common.common.views.avatar.AmityAvatarView
        android:id="@+id/channelAvatarView"
        style="@style/AmityAvatarStyle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/channelDisplayName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jo March"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/channelAvatarView"
        app:layout_constraintTop_toTopOf="@id/channelAvatarView" />

    <TextView
        android:id="@+id/postCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30 Min"
        app:layout_constraintLeft_toRightOf="@id/channelAvatarView"
        app:layout_constraintTop_toBottomOf="@id/channelDisplayName" />

    <TextView
        android:id="@+id/channelDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/amity_padding_xs"
        android:text="Having an amazing fun day with  @Laurie and these girls! #happylunch"
        app:layout_constraintTop_toBottomOf="@id/channelAvatarView" />

</androidx.constraintlayout.widget.ConstraintLayout>