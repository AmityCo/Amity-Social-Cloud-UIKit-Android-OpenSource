<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/amity_post_image_content_height"
    android:orientation="horizontal">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageViewPreviewImageOne"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingRight="@dimen/amity_padding_xxs"
        android:scaleType="centerCrop" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageViewPreviewImageTwo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingLeft="@dimen/amity_padding_xxs"
        android:scaleType="centerCrop" />

</LinearLayout>