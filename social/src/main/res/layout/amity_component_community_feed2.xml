<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.amity.socialcloud.uikit.common.common.views.avatar.AmityAvatarView
        android:id="@+id/avatarView"
        style="@style/AmityAvatarStyle"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></com.amity.socialcloud.uikit.common.common.views.avatar.AmityAvatarView>

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jo March"
        app:layout_constraintLeft_toRightOf="@id/avatarView"
        app:layout_constraintTop_toTopOf="@id/avatarView" />


</androidx.constraintlayout.widget.ConstraintLayout>
