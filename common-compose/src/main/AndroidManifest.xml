        <receiver
            android:name="com.amity.socialcloud.uikit.common.infra.download.AmityDownloadCompleteReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.DOWNLOAD_COMPLETE" />
