<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ChatHomeToolBarStyle" parent="BaseToolBarStyle">
        <item name="amityLeftDrawableStyle">@style/ChatToolbarLeftDrawableStyle</item>
        <item name="amityLeftTextViewStyle">@style/ChatToolbarLeftTextStyle</item>
    </style>

    <style name="ChatToolbarLeftDrawableStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="ChatToolbarLeftTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/amity_padding_m1</item>
        <item name="android:textSize">@dimen/amity_text_size_headline</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/amityColorBase</item>
    </style>
</resources>